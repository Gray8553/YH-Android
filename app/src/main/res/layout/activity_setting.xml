<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.intfocus.yh_android.SettingActivity">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionBar">

        <ImageView
            android:id="@+id/bannerBack"
            style="@style/BannerBackButton"
            android:onClick="dismissActivity" />

        <TextView
            style="@style/BannerBackText"
            android:layout_toRightOf="@id/bannerBack"
            android:onClick="dismissActivity" />

        <TextView
            android:text="设置"
            style="@style/BannerTitle" />

        <RelativeLayout
            android:id="@+id/colorViewLayout"
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="6dp">

            <ImageView
                android:id="@+id/colorView0"
                style="@style/ColorViewStyle0" />
            <ImageView
                android:id="@+id/colorView1"
                style="@style/ColorViewStyle1" />
            <ImageView
                android:id="@+id/colorView2"
                style="@style/ColorViewStyle2" />
            <ImageView
                android:id="@+id/colorView3"
                style="@style/ColorViewStyle3" />
            <ImageView
                android:id="@+id/colorView4"
                style="@style/ColorViewStyle4" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/actionBar"
        android:layout_above="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="18dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="18dp"
            android:layout_marginBottom="20dp">

            <TextView
                style="@style/SettingTitle"
                android:text="用户信息" />

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="名称" />

                <TextView
                    android:id="@+id/user_id"
                    style="@style/SettingValue"
                    android:text="用户名称/用户ID" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="角色" />

                <TextView
                    android:id="@+id/role_id"
                    style="@style/SettingValue"
                    android:text="角色ID" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="群组" />

                <TextView
                    android:id="@+id/group_id"
                    style="@style/SettingValue"
                    android:text="群组ID" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/change_pwd"
                    style="@style/SettingButton"
                    android:gravity="center_vertical"
                    android:text="修改登陆密码" />

                <TextView
                    android:id="@+id/warn_pwd"
                    style="@style/SettingValue"/>
            </RelativeLayout>

            <View style="@style/Divider" />

            <TextView
                style="@style/SettingTitle"
                android:text="应用信息" />

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="名称" />

                <TextView
                    android:id="@+id/app_name"
                    style="@style/SettingValue"
                    android:text="应用名称" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="版本号" />

                <TextView
                    android:id="@+id/app_version"
                    style="@style/SettingValue"
                    android:text="v1.0" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="设备型号" />

                <TextView
                    android:id="@+id/device_id"
                    style="@style/SettingValue"
                    android:text="设备型号" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="消息推送" />

                <TextView
                    android:id="@+id/push_state"
                    style="@style/SettingValue"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:text="状态" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="数据接口" />

                <TextView
                    android:id="@+id/api_domain"
                    style="@style/SettingValue"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:text="域名" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="应用标识" />

                <TextView
                    android:id="@+id/app_identifier"
                    style="@style/SettingValue"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:text="标识" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    android:id="@+id/check_assets"
                    style="@style/SettingButton"
                    android:text="校正" />

                <TextView
                    style="@style/SettingValue"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:text="若界面显示异常，请校正" />
            </RelativeLayout>


            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    android:id="@+id/check_upgrade"
                    style="@style/SettingButton"
                    android:text="检测更新" />

                <TextView
                    android:id="@+id/pgyer_link"
                    style="@style/SettingValue"
                    android:layout_marginTop="3dp"
                    android:textColor="#0000ff"
                    android:textSize="12dp"
                    android:text="有测试版本发布（1.2.33）" />
            </RelativeLayout>

            <View style="@style/Divider" />

            <TextView
                style="@style/SettingTitle"
                android:text="安全策略" />

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="启用锁屏" />

                <Switch
                    android:id="@+id/lock_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    android:id="@+id/change_lock"
                    style="@style/SettingButton"
                    android:visibility="gone"
                    android:text="修改锁屏密码" />
            </RelativeLayout>

            <View style="@style/Divider" />

            <TextView
                style="@style/SettingTitle"
                android:text="配色主题" />

            <RelativeLayout style="@style/SettingGroup">

                <TextView
                    style="@style/SettingKey"
                    android:text="旧版UI" />

                <Switch
                    android:id="@+id/ui_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View style="@style/Divider" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logout"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logout_background"
        android:text="退出登录"
        android:textColor="@color/white" />

</RelativeLayout>

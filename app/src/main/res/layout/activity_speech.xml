<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/speech_bg">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bannerBack"
            style="@style/BannerBackButton"
            android:onClick="dismissActivity" />

        <TextView
            style="@style/BannerBackText"
            android:layout_toRightOf="@id/bannerBack"
            android:textColor="#302469"
            android:onClick="dismissActivity" />

        <TextView
            android:id="@+id/bannerTitle"
            style="@style/BannerTitle"
            android:text="语音播报"
            android:textColor="#302469"/>

        <RelativeLayout
            android:id="@+id/colorViewLayout"
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="6dp">

            <ImageView
                android:id="@+id/colorView0"
                style="@style/ColorViewStyle0" />

            <ImageView
                android:id="@+id/colorView1"
                style="@style/ColorViewStyle1" />

            <ImageView
                android:id="@+id/colorView2"
                style="@style/ColorViewStyle2" />

            <ImageView
                android:id="@+id/colorView3"
                style="@style/ColorViewStyle3" />

            <ImageView
                android:id="@+id/colorView4"
                style="@style/ColorViewStyle4" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBar"
        android:layout_above="@+id/speech_control"
        android:background="@color/lightgray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:padding="15dp"
            android:background="@drawable/speech_bg">

            <TextView
                android:id="@+id/txt_current_speech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txt_speechdata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_below="@id/txt_current_speech" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/speech_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/speech_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="playButton" />

        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/btn_play"
            android:layout_centerVertical="true"
            android:src="@drawable/btnplay_up"
            android:onClick="previousButton" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/btn_play"
            android:layout_centerVertical="true"
            android:src="@drawable/btnplay_next"
            android:onClick="nextButton" />

        <ImageView
            android:id="@+id/btn_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="launchSpeechListMenu"
            android:padding="10dp"
            android:src="@drawable/btn_list" />
    </RelativeLayout>


</RelativeLayout>

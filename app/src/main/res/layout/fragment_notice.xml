<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_notice_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>

    <!--筛选框-->
    <LinearLayout
        android:id="@+id/ll_notice_select_list"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_notice_select"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/text_system_notice"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_system_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:kswThumbHeight="18dp"
                app:kswThumbWidth="18dp"
                app:kswAnimationDuration="300"
                app:kswThumbDrawable="@drawable/notice_switch"
                app:kswBackDrawable="@drawable/notice_switch_back"
                app:kswThumbMarginBottom="-4dp"
                app:kswThumbMarginLeft="-3dp"
                app:kswThumbMarginRight="-3dp"
                app:kswThumbMarginTop="-1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/text_work_notice"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_work_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:kswThumbHeight="18dp"
                app:kswThumbWidth="18dp"
                app:kswAnimationDuration="300"
                app:kswThumbDrawable="@drawable/notice_switch"
                app:kswBackDrawable="@drawable/notice_switch_back"
                app:kswThumbMarginBottom="-4dp"
                app:kswThumbMarginLeft="-3dp"
                app:kswThumbMarginRight="-3dp"
                app:kswThumbMarginTop="-1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/text_warning_system"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_warning_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:kswThumbHeight="18dp"
                app:kswThumbWidth="18dp"
                app:kswAnimationDuration="300"
                app:kswThumbDrawable="@drawable/notice_switch"
                app:kswBackDrawable="@drawable/notice_switch_back"
                app:kswThumbMarginBottom="-4dp"
                app:kswThumbMarginLeft="-3dp"
                app:kswThumbMarginRight="-3dp"
                app:kswThumbMarginTop="-1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/text_report_comment"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_report_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:kswThumbHeight="18dp"
                app:kswThumbWidth="18dp"
                app:kswAnimationDuration="300"
                app:kswThumbDrawable="@drawable/notice_switch"
                app:kswBackDrawable="@drawable/notice_switch_back"
                app:kswThumbMarginBottom="-4dp"
                app:kswThumbMarginLeft="-3dp"
                app:kswThumbMarginRight="-3dp"
                app:kswThumbMarginTop="-1dp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_notice_select"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_notice_select_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="筛选"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>